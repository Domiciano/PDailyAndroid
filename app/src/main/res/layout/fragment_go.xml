<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"

        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/TextFormName"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#434343"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_display_go_one"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:fontFamily="@font/pragmaticaw05_regular"
                android:textColor="#ffffff"
                android:text="P"
                android:textAlignment="center"
                android:textSize="75sp"
                android:textStyle="bold"
                android:ellipsize="none"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/tv_display_go_two"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:fontFamily="@font/pragmaticaw05_regular"
                android:textColor="#ffffff"
                android:text="P"
                android:textAlignment="center"
                android:textSize="125sp"
                android:textStyle="bold"
                android:ellipsize="none"
                android:gravity="center">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#434343"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_display_go_three"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:fontFamily="@font/pragmaticaw05_regular"
                android:textColor="#ffffff"
                android:text="P"
                android:textAlignment="center"
                android:textSize="125sp"
                android:textStyle="bold"
                android:ellipsize="none"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/tv_display_go_four"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:fontFamily="@font/pragmaticaw05_regular"
                android:textColor="#ffffff"
                android:text="P"
                android:textAlignment="center"
                android:textSize="75sp"
                android:textStyle="bold"
                android:ellipsize="none"
                android:gravity="center">
            </TextView>
        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/seleccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat"
        tools:layout_editor_absoluteX="10dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayoutCompat2"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/linearLayoutCompat4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/ButtonAnswerOne"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/button_behavior"
                android:ellipsize="none"
                android:fontFamily="@font/pragmaticaw05_bold"
                android:text="SI"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayoutCompat4"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/linearLayoutCompat2"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/ButtonAnswerTwo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/button_behavior"
                android:ellipsize="none"
                android:fontFamily="@font/pragmaticaw05_bold"
                android:text="NO"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>